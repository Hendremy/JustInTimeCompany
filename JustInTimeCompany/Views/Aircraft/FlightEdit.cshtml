@model FlightInstance
<a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Retour</a>

<h4>Vol</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewBag.FormAction" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flight.From" class="control-label"></label>
                <input asp-for="Flight.From" class="form-control" />
                <span asp-validation-for="Flight.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.To" class="control-label"></label>
                <input asp-for="Flight.To" class="form-control" />
                <span asp-validation-for="Flight.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pilot" class="control-label"></label>
                <input asp-for="Pilot" class="form-control" />
                <span asp-validation-for="Pilot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aircraft" class="control-label"></label>
                <input asp-for="Aircraft" class="form-control" />
                <span asp-validation-for="Aircraft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TakeOff" class="control-label"></label>
                <input asp-for="TakeOff" class="form-control" />
                <span asp-validation-for="Schedule.TakeOff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Landing" class="control-label"></label>
                <input asp-for="Landing" class="form-control" />
                <span asp-validation-for="Schedule.Landing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.ButtonValue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
