@model FlightReport

<a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Retour</a>

<h4>Rapport de vol</h4>
<hr/>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Schedule)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.Schedule)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActualSchedule)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActualSchedule)
        </dd>
        @if (Model.HasDelay)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DelayJustification)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DelayJustification)
            </dd>
        }
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}