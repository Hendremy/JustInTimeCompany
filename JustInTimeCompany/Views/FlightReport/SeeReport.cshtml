@model FlightReport

@{
    ViewData["Title"] = "Rapport de vol";
}

<h1>Rapport de vol</h1>

<a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Retour</a>

<hr/>
<div class="mx-auto">
        <h5>Horaire prévu</h5>
        <div>
            <p>Décollage: @Model.Flight.TakeOff</p>
            <p>Atterrissage: @Model.Flight.Landing</p>
        </div>
        <h5>Horaire réel</h5>
        <div>
            <p>Décollage: @Model.TakeOff</p>
            <p>Atterrissage: @Model.Landing</p>
        </div>
        @if (Model.HasDelay)
    {
        <div>
            <p>Raison du retard : @Model.DelayJustification</p>
        </div>
    }
</div>