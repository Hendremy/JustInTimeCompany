@model FlightReport

@{
    ViewData["Title"] = "Compléter le rapport de vol";
}


<a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Retour</a>

<h4>Rapport de vol</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Report" method="post">
            <input type="hidden" asp-for="FlightId" />
            <h5>Horaire prévu</h5>
            <div class="form-group">
                <label asp-for="Flight.Schedule.TakeOff" class="control-label">Décollage</label>
                <input readonly="@(true)" asp-for="Flight.Schedule.TakeOff" class="form-control" />
                <span asp-validation-for="Flight.Schedule.TakeOff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Schedule.Landing" class="control-label">Atterrissage</label>
                <input readonly="@(true)" asp-for="Flight.Schedule.Landing" class="form-control" />
                <span asp-validation-for="Flight.Schedule.Landing" class="text-danger"></span>
            </div>
            <h5>Horaire réel</h5>
            <div class="form-group">
                <label asp-for="ActualSchedule.TakeOff" class="control-label">Décollage *</label>
                <input asp-for="ActualSchedule.TakeOff" class="form-control" />
                <span asp-validation-for="ActualSchedule.TakeOff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualSchedule.Landing" class="control-label">Atterrissage *</label>
                <input asp-for="ActualSchedule.Landing" class="form-control" />
                <span asp-validation-for="ActualSchedule.Landing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DelayJustification" class="control-label"></label>
                <input asp-for="DelayJustification" class="form-control" />
                <span asp-validation-for="DelayJustification" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
