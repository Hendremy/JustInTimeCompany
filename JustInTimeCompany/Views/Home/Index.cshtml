@{
    ViewData["Title"] = "Accueil";
}

<div class="text-center">
    <h1 class="display-4">Just In Time Company</h1>
    <p>
        Marre des bouchons ? Marre des trains ? Nous avons LA solution !</br>
        Notre compagnie propose des vols en hélicoptères à travers la Belgique
    </p>
    <h2>Aéroports désservis:</h2>
    <p>Liège, Bruxelles, Ostende, Charleroi</p>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 carousel-image" src="~/img/airports/liege.jpg" alt="Liège">
          <div class="carousel-caption d-none d-md-block">
            <h5>Aéroport de Liège</h5>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 carousel-image" src="~/img/airports/ostende.jpg" alt="Ostende">
          <div class="carousel-caption d-none d-md-block">
            <h5>Aéroport de Bruges-Ostende</h5>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 carousel-image" src="~/img/airports/zaventem.jpg" alt="Bruxelles">
          <div class="carousel-caption d-none d-md-block">
            <h5>Aéroport de Bruxelles-National Zaventem</h5>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 carousel-image" src="~/img/airports/charleroi.jpg" alt="charleroi">
          <div class="carousel-caption d-none d-md-block">
            <h5>Aéroport de Charleroi Bruxelles-Sud</h5>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
      </a>
    </div>
</div>

@section Scripts{
    <partial name="_BootstrapScriptsPartial"/>
}
