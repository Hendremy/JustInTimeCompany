@model IEnumerable<Flight>

<h5>Vols en retard : <span class="text-danger">@Model.Count()</span> </h5>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Départ
            </th>
            <th scope="col">
                Destination
            </th>
            <th scope="col">
                Arrivée prévue
            </th>
            <th scope="col">
                Arrivée réelle
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FlightReport.DelayJustification)
            </th>
            <th scope="col">
                Pilote
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() > 0){
            @foreach (var flight in Model)
            {
                <partial name="_FlightRow" model=flight/>
            }
        }
        else
        {
            <tr><td colspan=6>Aucun vol en retard</td></tr>
        }
    </tbody>
</table>