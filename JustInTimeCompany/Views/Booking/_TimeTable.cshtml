@model IEnumerable<Flight>

@{
    var flights = Model.OrderByDescending(fl => fl.Landing);
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.TakeOff)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Landing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingSeats)
            </th>
            <th>
                Réserver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in flights) {
            if (flight.IsPassed)
            {
                if (flight.HasReport)
                {
                    ViewBag.RowClass = "table-secondary";
                }
                else
                {
                    ViewBag.RowClass = "table-danger";
                }
                //Sans edit ou supp
                <partial name="_FlightRow" model=flight/>
            }
            else
            {
                ViewBag.RowClass = "";
                <partial name="_FlightRow" model=flight/>
            }
        }
    </tbody>
</table>