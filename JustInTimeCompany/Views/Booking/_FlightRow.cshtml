@model Flight

<tr class="@ViewBag.RowClass">
    <td scope="col">
        @Html.DisplayFor(model => model.TakeOff)
    </td>
    <td scope="col">
        @Html.DisplayFor(model => model.Landing)
    </td>
    <td scope="col">
        @Html.DisplayFor(model => model.RemainingSeats)
    </td>
    <td>
        <a class="btn btn-outline-primary" asp-route-id=@Model.Id asp-action="Book">Réserver</a>
    </td>
</tr>