@model IEnumerable<Flight>

@{
    var flights = Model.OrderBy(fl => fl.TakeOff);
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.TakeOff)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Landing)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Pilot)
            </th>
            <th>
                <a class="btn btn-outline-primary" asp-action="AddSchedule" asp-route-id=@ViewBag.PathId>Ajouter un horaire<i class="bi bi-plus"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in flights)
        {
            <partial name="_FlightRow" model=flight/>
        }
    </tbody>
</table>